#!/bin/bash
# This script compiles a Python script file

# Check if the PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
    echo "Error: PYFILE environment variable not set"
    exit 1
fi

# Check if the Python file exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: $PYFILE not found"
    exit 1
fi

# Compile the Python file
echo "Compiling $PYFILE ..."
python3 -m compileall "$PYFILE"

# Rename the compiled file to $PYFILEc
mv "${PYFILE}c" "${PYFILE}c"

echo "Done"

